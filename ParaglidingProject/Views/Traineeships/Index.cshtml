@model IEnumerable<ParaglidingProject.SL.Core.TraineeShip.NS.TransferObjects.TraineeShipDto>

@{
    ViewData["Title"] = "Stages";
}


<h1>Stages</h1>

<p>
    <a asp-action="Create" class="create">Créer un nouveau stage</a>
</p>
<table class="table" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TraineeShipStartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TraineeShipEndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TraineeShipPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TraineeShipStartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TraineeShipEndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TraineeShipPrice)
                </td>
                <td>
                    <a class="styleLink" asp-action="Edit" asp-route-id="@item.Traineeshipid">Editer</a> |
                    <a class="styleLink" asp-action="Details" asp-route-id="@item.Traineeshipid">Détails</a> |
                    <a class="styleLink" asp-action="Delete" asp-route-id="@item.Traineeshipid">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
