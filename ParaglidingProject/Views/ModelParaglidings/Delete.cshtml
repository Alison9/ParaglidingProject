@model ParaglidingProject.Models.ModelParagliding

@{
    ViewData["Title"] = "Delete";
}

<h1>Supprimer</h1>

<h3>Etes-vous sûr de vouloir supprimer ce superbe modèle ?</h3>
<div>
    <h4>Modèle de parapente</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HeightParagliding)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HeightParagliding)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaxWeightPilot)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaxWeightPilot)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MinWeightPilot)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MinWeightPilot)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AprovalNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AprovalNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AprovalDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AprovalDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index">Retour à la liste</a>
    </form>
</div>
