@model ParaglidingProject.Models.Paraglider

@{
    ViewData["Title"] = "EditParagliding";
}

<h1>Editer le parapente numéro @Model.ID</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditParagliding">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="CommissioningDate" class="control-label"></label>
                <input asp-for="CommissioningDate" class="form-control" />
                <span asp-validation-for="CommissioningDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastRevisionDate" class="control-label"></label>
                <input asp-for="LastRevisionDate" class="form-control" />
                <span asp-validation-for="LastRevisionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParagliderModelID" class="control-label"></label>
                <select asp-for="ParagliderModelID" class="form-control" asp-items="ViewBag.ModelParaglidingID"></select>
                <span asp-validation-for="ParagliderModelID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Editer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index">Retour à la liste</a>
</div>