@model IEnumerable<ParaglidingProject.Models.ParagliderModel>

@{
    ViewData["Title"] = "Index";

}
@{ 
    Layout = "_Layout";
}

<h1>Modèle de parapente</h1>

<p>
    <a class="create" asp-action="Create">Créer un nouveau modèle</a>
</p>
<table class="table" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxWeightPilot)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinWeightPilot)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApprovalNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApprovalDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxWeightPilot)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinWeightPilot)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApprovalNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApprovalDate)
            </td>
            <td class="last">
                <a class="btn btn-primary styleLink" asp-action="Edit" asp-route-id="@item.ID">Publier</a> |
                <a class="btn btn-primary styleLink" asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a class="btn btn-primary styleLink" asp-action="Delete" asp-route-id="@item.ID">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
