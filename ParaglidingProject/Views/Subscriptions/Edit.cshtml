@model ParaglidingProject.Models.Subscription
@{
    ViewData["Title"] = "Edit";
}

@{ 
    Layout = "_Layout";
}

<h1>Editer les information des cotisations pour l'année @Model.YearID</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="YearID" />
            <div class="form-group">
                <label asp-for="YearID" class="control-label">Année</label>
            <input asp-for="YearID" class="form-control" />
                <span asp-validation-for="YearID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Prix</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" action="EditPost" value="Sauver" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

