@model ParaglidingProject.Models.SubscriptionPayment

@{
    ViewData["Title"] = "Supprimer";
}

<h1>Suppression du payment de @Model.Pilot.FirstName @Model.Pilot.LastName pour l'année @Model.Subscription.Year</h1>

<h3>Voulez-vous supprimer ce payment?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pilot.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pilot.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pilot.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pilot.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DatePay)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatePay)
        </dd>
    </dl>

    <form asp-action="DeletePayment">
        <input type="hidden" asp-for="SubscriptionID" />
        <input type="hidden" asp-for="PilotID" />
        <input type="submit" value="Supprimer" class="btn btn-danger add" /> |
        <a asp-action="Index" class="btn btn-primary styleLink">Retour</a>
    </form>
</div>

