@model ParaglidingProject.Models.Payment

@{
    ViewData["Title"] = "DeletePayment";
}

<h1>Suppression du payment N°@Model.ID de @Model.Pilot.FirstName @Model.Pilot.LastName</h1>

<h3>Voulez-vous supprimer ce payment?</h3>
<div>
    <h4>Payment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pilot.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pilot.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pilot.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pilot.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsPay)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsPay)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DatePay)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatePay)
        </dd>
    </dl>

    <form asp-action="DeletePayment">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Retour</a>
    </form>
</div>

