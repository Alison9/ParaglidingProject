@model ParaglidingProject.Models.Subscription

@{
    ViewData["Title"] = "Créer une cotisation";
}

<h1>Créer une nouvelle année de cotisation</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger validator"></div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label><br />
                <input asp-for="Year" class="form-control" /><br />
                <span asp-validation-for="Year" class="text-danger validator"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubscriptionAmount" class="control-label"></label><br />
                <input asp-for="SubscriptionAmount" class="form-control" /><br />
                <span asp-validation-for="SubscriptionAmount" class="text-danger validator"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Ajouter" class="btn btn-primary add" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index" class="btn btn-primary styleLink">Retour</a>
</div>

