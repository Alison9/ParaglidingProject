@model IEnumerable<ParaglidingProject.Models.Subscription>

@{
    ViewData["Title"] = "Cotisations";
}

@{ 
    Layout = "_Layout";
}

<h1>Historique des cotisations</h1>

<p>
    <a class="create" asp-action="Create">Créer une nouvelle année de cotisation</a>
</p>
<table class="table" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubscriptionAmount)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubscriptionAmount)
            </td>
            <td>
                <a class="btn btn-primary styleLink" asp-action="Edit" asp-route-id="@item.Year">Editer</a> |
                <a  class="btn btn-primary styleLink" asp-action="Details" asp-route-id="@item.Year">Détails</a> |
                <a class="btn btn-primary styleLink" asp-action="Delete" asp-route-id="@item.Year">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
