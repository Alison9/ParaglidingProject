@model IEnumerable<ParaglidingProject.SL.Core.Subscription.NS.transferObjects.SubscriptionDto>

@{
    ViewData["Title"] = "Cotisations";
}

@{ 
    Layout = "_Layout";
}

<h1>Historique des cotisations</h1>

<p>
    <a class="create" asp-action="Create">Créer une nouvelle année de cotisation</a>
</p>
<table class="table" cellspacing="0">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-pSortSubscription="@ParaglidingProject.SL.Core.Subscription.NS.Helpers.SubscriptionSorts.YearDesc">@Html.DisplayNameFor(model => model.Id)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-pSortSubscription="@ParaglidingProject.SL.Core.Subscription.NS.Helpers.SubscriptionSorts.AmountAsc">@Html.DisplayNameFor(model => model.Amount)</a>
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                <a class="btn btn-primary styleLink" asp-action="Edit" asp-route-id="@item.Id">Editer</a> |
                <a  class="btn btn-primary styleLink" asp-action="Details" asp-route-id="@item.Id">Détails</a> |
                <a class="btn btn-primary styleLink" asp-action="Delete" asp-route-id="@item.Id">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
