@model IEnumerable<ParaglidingProject.Models.Site>

@{
    ViewData["Title"] = "Index";
}

<h1>Sites</h1>

<p>
    <a asp-action="Create">Créer un nouveau site</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrientationLanding)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrientationTakeOff)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AltitudeTakeOff)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlightType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Level)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrientationLanding)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrientationTakeOff)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AltitudeTakeOff)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FlightType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Level.ID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
