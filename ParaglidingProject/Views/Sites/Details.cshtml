@model ParaglidingProject.Models.Site

@{
    ViewData["Title"] = "Details";
}

<h1>Details du site de @Model.Name</h1>

<div>
    <h4>Site</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrientationLanding)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrientationLanding)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrientationTakeOff)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrientationTakeOff)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AltitudeTakeOff)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AltitudeTakeOff)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlightType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlightType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Level)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Level.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Flights)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Date du vol</th>
                    <th>Heure de départ</th>
                    <th>Heure d'arrivée</th>
                    <th>Pilote</th>
                </tr>
                @foreach (var item in Model.Flights)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItems => item.FlightDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItems => item.FlightStart)
                        </td>
                        <td>
                            @Html.DisplayFor(modeItems => item.FlightEnd)
                        </td>
                        <td>
                            @Html.DisplayFor(modeItems => item.Pilot.FirstName) @Html.DisplayFor(modeItems => item.Pilot.LastName)
                        </td>
                        <td>
                            <a class="btn btn-primary" asp-route-id="@item.ID" asp-action="DetailFlight">Détails</a>
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
